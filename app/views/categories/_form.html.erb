<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-primary rounded", local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of category" %>
          </div>
        </div>
        <div class="form-group row mt-2">
          <%= f.submit class: "btn btn-outline-light btn-lg mx-auto p-2", style: "width: 200px;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
